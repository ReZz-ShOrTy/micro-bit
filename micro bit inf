input.onButtonPressed(Button.A, function () {
    for (let index = 0; index < 1e+23; index++) {
        basic.showLeds(`
            # # # # #
            . # # # .
            . . # . .
            . # . # .
            # # # # #
            `)
        basic.pause(10)
        basic.showLeds(`
            # # # # #
            . # . # .
            . . # . .
            . # # # .
            # # # # #
            `)
    }
})
basic.showString("press a")
